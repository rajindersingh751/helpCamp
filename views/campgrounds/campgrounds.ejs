<%include ../partials/header %>

<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1> Welcome to Help Camp</h1>
            <p> hand-picked campgrounds</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Camp</a>
            </p>
        </div>
    </header>
    
    <div class="row">
         <% campgrounds.forEach(function(camp){%>
           <div class="col-md-4 col-sm-6 mb-2">
               <div class="card">
                  <img class="card-img-top" src = "<%=camp.image%>">
                  <div class= "card-body">
                       <h4 class="card-title"><%= camp.name %></h4>
                       <p>
                           <a href="/campgrounds/<%= camp._id %>" class="btn btn-danger">More info</a>
                       </p>
                  </div>
               </div>
           </div>
          <% }); %>
    </div>
</div>

<%include ../partials/footer %>